<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1.5">
        <ImageView
            android:id="@+id/ivPower"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/poweroff"/>
        <TextView
            android:id="@+id/tvPowerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="40sp"
            android:text="연결되지 않음"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn_conn"
            android:text="블루투스"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:paddingLeft="70dp"
            android:gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:drawableLeft="@drawable/ic_baseline_bluetooth"
            android:shadowColor="#ffffff"
            android:shadowDx="1"
            android:shadowDy="0"
            android:shadowRadius="1"
            />

        <Button
            android:id="@+id/btn_rmt"
            android:text="잠금해제"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttonshape"
            android:drawableLeft="@drawable/ic_baseline_cast_connected"
            android:shadowColor="#ffffff"
            android:shadowDx="1"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btn_map"
            android:text="위치추적"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttonshape"
            android:drawableLeft="@drawable/btnicon_gps_fixed_24"
            android:shadowColor="#ffffff"
            android:shadowDx="1"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:enabled="false"
            />

        <Button
            android:id="@+id/btn_setup"
            android:text="   설정"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:paddingLeft="70dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/buttonshape"
            android:drawableLeft="@drawable/btnicon_settings_24"
            android:shadowColor="#ffffff"
            android:shadowDx="1"
            android:shadowDy="0"
            android:shadowRadius="1"
            android:enabled="false"
            />
    </LinearLayout>

</LinearLayout>